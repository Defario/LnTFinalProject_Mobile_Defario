<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:layout_margin="50px">

    <TextView
        android:id="@+id/tv_registerIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID NUMBER"
        android:textSize="32dp"/>

    <EditText
        android:id="@+id/et_registerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_registerIdLabel"
        android:hint="ex.123"/>

    <TextView
        android:id="@+id/tv_registerEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_registerId"
        android:text="EMAIL"
        android:textSize="32dp"/>

    <EditText
        android:id="@+id/et_registerEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_registerEmailLabel"
        android:hint="example@email.com"/>

    <TextView
        android:id="@+id/tv_registerNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_registerEmail"
        android:text="NAME"
        android:textSize="32dp"/>

    <EditText
        android:id="@+id/et_registerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_registerNameLabel"
        android:hint="Username"/>

    <TextView
        android:id="@+id/tv_registerPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_registerName"
        android:text="PASSWORD"
        android:textSize="32dp"/>

    <EditText
        android:id="@+id/et_registerPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_registerPasswordLabel"
        android:hint="password"/>

    <TextView
        android:id="@+id/tv_password2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_registerPassword"
        android:text="CONFIRMATION PASSWORD"
        android:textSize="32dp"/>

    <EditText
        android:id="@+id/et_registerPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_password2Label"
        android:hint="confirm password"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_registerPassword2"
        android:text="REGISTER"/>

    <TextView
        android:id="@+id/tv_toLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Click Here to Login"/>

</androidx.constraintlayout.widget.ConstraintLayout>